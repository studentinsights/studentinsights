{
  "name": "studentinsights",
  "description": "insights for educators at Somerville Public Schools",
  "repository": "https://github.com/studentinsights/studentinsights",
  "scripts": {
    "postdeploy": [
      "rake db:migrate",
      "rake db:seed:demo"
    ]
  },
  "env": {
    "SHOULD_REPORT_ANALYTICS": {
      "required": true,
      "value": "false"
    },
    "QUOTAGUARDSTATIC_MASK": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "required": true,
      "description": "verifies integrity of signed cookies",
      "generator": "secret"
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    },
    "worker": {
      "quantity": 1
    }
  },
  "addons": ["heroku-postgresql"],
  "buildpacks": [{ "url": "heroku/ruby" }]
}
